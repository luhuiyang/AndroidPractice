<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:padding="@dimen/half_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_gravity="center"
        android:id="@+id/iv_movie_image"
        android:src="@mipmap/ic_launcher"
        android:layout_width="@dimen/listview_image"
        android:layout_height="@dimen/listview_image" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_movie_name"
            android:maxLines="1"
            android:textSize="18sp"
            tools:text="英雄"
            android:padding="@dimen/base_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_movie_category"
            android:paddingLeft="@dimen/base_margin"
            android:paddingRight="@dimen/base_margin"
            android:paddingBottom="@dimen/half_margin"
            android:textColor="@color/blue"
            tools:text="英雄"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:paddingBottom="@dimen/half_margin"
            android:id="@+id/tv_movie_time"
            android:paddingLeft="@dimen/base_margin"
            android:paddingRight="@dimen/base_margin"
            android:textColor="@color/orange"
            tools:text="2017"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:maxLines="1"
            android:paddingBottom="@dimen/half_margin"
            android:id="@+id/tv_movie_actors"
            android:paddingLeft="@dimen/base_margin"
            android:paddingRight="@dimen/base_margin"
            android:textColor="@color/line_gray"
            tools:text="李连杰"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>